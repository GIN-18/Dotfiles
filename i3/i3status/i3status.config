general {
        colors = true
        interval = 5
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

## 无线网络信息使用默认参数 _first_ 可能无法找到无线信息，这里直接制定我的无线网络的名称，可以使用 ip addr查看，相当于ifconfig
#order += "disk /home"
#order += "ethernet _first_"
#order += "load"
order += "wireless _first_"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "battery all"
order += "volume master"
order += "tztime local"

volume master {
        format = " %volume" 
        #format_muted = " : muted (%volume) "
        format_muted = ": muted (%volume)"
        device = "default"
        mixer = "Master"
}

## 定制无线网络信息
wireless _first_ {
    format_up = " %quality  %essid %ip"
    format_down = "W: down"
}

cpu_usage {
      format = " %usage"
       max_threshold = 80
       format_above_threshold = " %usage"
       degraded_threshold = 60
       format_above_degraded_threshold = " %usage"
}



load {
        format = " load %1min "
        # max_threshold = 0.3
}

disk "/" {
        format = " %avail"
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " lan: %ip %speed "
        format_down = " no lan "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = "%status %percentage"
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        # status_chr = ""
        status_chr = "⚡"
        status_chr = ""
        # status_bat = "bat"
        # status_bat = "☉"
        status_bat = ""
        # status_unk = "?"
        status_unk = ""
        # status_full = ""
        status_full = "☻"
        low_threshold = 15
        threshold_type = time
}



memory {
        #format = "  %used  %available "
        format = " %used  %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = " %Y-%m-%d %H:%M  "
}

cpu_temperature 0 {
        format = " %degrees °C"
        max_threshold = 85
        path = "/sys/class/thermal/thermal_zone0/temp"
}

